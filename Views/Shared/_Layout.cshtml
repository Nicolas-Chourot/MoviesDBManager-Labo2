<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" title="more options">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="/Movies/Index">
                    <img src="/favicon.ico" style="height: 36px; margin-top: 8px; margin-left:5px;" title="Liste des films" />
                </a>
                <a href="/Actors/Index">
                    <img src="/actors_logo.png" style="height: 36px; margin-top: 8px; margin-left: 5px;" title="Liste des acteurs" />
                </a>
                <a href="/Distributors/Index">
                    <img src="/Distributors_Logo.png" style="height: 36px; margin-top: 8px; margin-left: 5px;" title="Liste des distributeurs" />
                </a>
                <a href="/Home/About">
                    <img src="/info-icon.png" style="height: 36px; margin-top: 8px; margin-left: 5px;" title="A propos..." />
                </a>
            
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Répertoire des films</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
